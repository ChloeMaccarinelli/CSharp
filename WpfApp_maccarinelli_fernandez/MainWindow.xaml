<Window x:Class="WpfApp_maccarinelli_fernandez.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp_maccarinelli_fernandez"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <DockPanel >
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Carte">
            </MenuItem>
            <MenuItem Header="_Liste">
            </MenuItem>
            <MenuItem Header="_Exécuter">
            </MenuItem>
            <MenuItem Header="_Paramètres"/>
        </Menu>
        <TextBox AcceptsReturn="True" />
        <Image Height="380" VerticalAlignment="Center" HorizontalAlignment="Left" Width="437" Margin="20,0.4,0,0" Source="carte-france-index.jpg" />
        <DataGrid Name="datagrid" Height="360" VerticalAlignment="Center"  Width="160" Margin="0,21.4,150,21" SelectionChanged="DataGrid_SelectionChanged">

            <DataGrid.Columns>
                <DataGridTextColumn Header="Longitude" Width="80" Binding="{Binding Longitude}" />
                <DataGridTextColumn Header="Latitude" Width="80" Binding="{Binding Latititude}" />
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>


</Window>
